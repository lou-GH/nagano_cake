<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2 "></div>
    <div class="col-md-8">
      <h2>会員一覧</h2>

      <ul class="customers">
        <table class = "table">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.customer_status %></td>
              <td></td>
            </tr>
          </tbody>
          <% end %>

        </table>
        <%= paginate @customers %>
      </ul>
    </div>
  </div>
  <div class="col-md-2 "></div>
</div>
