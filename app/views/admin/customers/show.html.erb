<div class="container px-5 px-sm-0">

  <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>

  <table class="table table-borderless">
    <thead>
      <tr></tr>
    </thead>
    <tbody>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td><%= @customer.customer_status %></td>
      </tr>
    </tbody>
  </table>

  <div class="text-center">
    <%= link_to edit_admin_customer_path(@customer) do %>
      <button type="submit" class="btn btn-success">編集する</button>
    <% end %>

    <%= link_to admin_order_path(@customer) do %>
      <button type="submit" class="btn btn-primary">注文履歴一覧を見る</button>
    <% end %>
  </div>

</div>
