<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-md-1">

      <h2>注文履歴一覧</h2>


      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_orders_path(order) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name %><%= order.customer.first_name %>
            </td>
            <td><=% order_details.sum(:amount) %></td>
            <td><%= order.order_sutatus_i18n %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
      <%= paginate @orders %>
    </div>

  </div>
</div>
