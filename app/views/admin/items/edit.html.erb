<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>
<h1>商品編集</h1>

<%= form_with model: @item do |f| %>

<p>商品画像</p>
<%= f.file_field :item_image, placeholder: "商品画像", accept: "image/*" %>

<p>商品名</p>
<label for="inputName"></label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名" %>

<p>商品説明</p>
<%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>

<p>商品名</p>
<label for="inputPrice"></label>
<%= f.text_field :price, autofocus: true, id:"inputprice", placeholder:"1000" %>円

<div class="text-center">
  <button type="submit" class="btn btn-success">変更を保存</button>
</div>

<% end %>
