<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-md-1">
      <h2 class="float-left">商品一覧</h2>
      <div class="text-right">
        <%= link_to new_admin_item_path do %>
          <button type="button" class="btn btn-outline-dark rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
        <% end %>
      </div>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active == true %>
                  <%= "販売中" %>
                <% else %>
                  <%=  "販売停止中" %>
                <% end %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>

      </table>
      <div class="text-center">
        <%= paginate @items %>
      </div>
    </div>

  </div>
</div>