<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-md-1">

      <h2>商品一覧</h2>


      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_items_path(item) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>