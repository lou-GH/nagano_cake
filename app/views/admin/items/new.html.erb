<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>

<h2>商品新規登録</h2>

<%= form_with model:@item, url:admin_items_path, method: :post do |f| %>

<div class="container">
  <div class="col-md-10 offset-md-2">
    <div>商品画像<br>
      <%= f.file_field :item_image, placeholder: "商品画像" %>
    </div>

    <div>商品名<br>
      <%= f.text_field :name, placeholder: "商品名" %>
    </div>

    <div>商品説明<br>
      <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
    </div>

    <div>ジャンル<br>
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
    </div>

    <div>税抜価格<br>
      <%= f.text_field :price, placeholder: "1000" %>円
    </div>

      <br>
      <br>

      <button type="submit" class="btn btn-success">新規登録</button>

  </div>
</div>
<% end %>
