<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>

<h2>商品新規登録</h2>

<%= form_with model:@item, url:'admin_items_new_path', method: :post do |f| %>

<h4>商品画像</h4>
<%= f.file_field :item_image, placeholder: "商品画像" %>

<h4>商品名</h4>
<%= f.text_field :name, placeholder: "商品名" %>


<h4>商品説明</h4>
<%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>

<h4>税抜価格</h4>
<%= f.text_field :price, placeholder: "1000" %>円

<%= f.submit '新規登録' %>

<% end %>
