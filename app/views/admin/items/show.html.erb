<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>

<div class="container px-5 px-sm-0">

  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-md-3">
      <%= image_tag item.get_iteme_image(120,80) %>
    </div>

    <div class="col-md-8 offset-md-1">

      <div>商品名</div>
      <%= item.name %>

      <div>商品説明</div>
      <%= item.introduction %>

      <div>税込価格<br>(税抜価格)</div>
      <%= tax_price %> (<%= item.price.to_s(:delimited) %>)円

      <%= link_to admin_items_(@item)edit_path do %>
        <%= f.submit '編集する' %>
      <% end %>

    </div>
  </div>
</div>
