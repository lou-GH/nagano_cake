<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-md-1">

      <h2><%= customer.last_name %><%= customer.first_name %>さんの注文履歴</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="3"></th>
            <th>購入日時</th>
            <th>注文個数</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td></td>
            <td>
              <%= link_to admin_orders_path(order) do %>
                <%= order.created_at %>
              <% end %>
            </td>
            <td><=% order_details.amount %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>

      </table>
      <%= paginate orders %>
    </div>

  </div>
</div>
