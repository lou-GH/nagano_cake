<div class="container px-5 px-sm-0">
    <div class="col-md-1">
    </div>

    <div class="col-md-10 offset-md-1">

<h2>注文履歴詳細</h2>

<%= form_with model: @order, url: admin_orders_path, method: :patch, local: true do |f| %>
  <table>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= l @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        <%= @order.shipping_postal_code%><%= @order.shipping_address %><br>
        <%= @order.shipping_name %>
      </td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n%></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= f.select :order_status, Order.order_statuses_i18n.invert %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </td>
    </tr>
  </table>
<% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <% @order_details.each do |order_detail| %>

  <% @total = 0 %>
  <% @total += order_detail.item.with_tax_price %>

  <%= form_with model: order_detail , url: admin_order_details_path(order_detail.id) , method: :patch , local: true do |f| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td>
        <%= f.select :manufacture_status, OrderDetail.manufacture_statuses_i18n.invert %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </table>

    <tr>
      <td>商品合計</td>
      <td><%= @total %>円</td>
    </tr>
    <tr>
      <td>送料</td>
      <td>800円</td>
    </tr>
    <tr>
      <td>請求金額合計</td>
      <td><%= @total + 800 %>円</td>
    </tr>
<% end %>