<%= form_with model: @customer, url: customers_information_path do |f| %>

<div class="container px-5 px-sm-0">
<h2>会員情報編集</h2>

<p>氏名</p>
<label for="inputLastName"></label>
<%= f.text_field :last_name, autofocus: true, id:"inputLastName",　placeholder: "令和" %>
<label for="inputFirstName"></label>
<%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"道子" %>

<p>フリガナ</p>
<label for="inputLastNameKana"></label>
<%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana",　placeholder: "レイワ" %>
<label for="inputFirstName"></label>
<%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder: "ミチコ" %>

<p>郵便番号</p>
<label for="inputPostalCode"></label>
<%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder: "0000000" %>

<p>住所</p>
<label for="inputAddress"></label>
<%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder: "東京都渋谷区代々木神園町0-0" %>

<p>電話番号</p>
<label for="inputTelephoneNumber"></label>
<%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder: "0000000" %>

<p>メールアドレス</p>
<label for="inputEmail"></label>
<%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder: "sample@example.com" %>

<div class="row">
  <div class="col-md-3 offset-md-1">
    <button type="submit" class="btn btn-success">編集内容を保存</button>
  </div>

    <% end %>

  <div class="col-md-3 offset-md-2">
    <%= link_to customers_unsubscribe_path do %>
      <button type="button" class="btn btn-danger">退会する</button>
    <% end %>
  </div>
</div>
</div>