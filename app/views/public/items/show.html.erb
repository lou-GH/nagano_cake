<script src="https://kit.fontawesome.com/6fd84a1e7d.js" crossorigin="anonymous"></script>

<div class="container px-5 px-sm-0">

  <h2>商品詳細</h2>

  <div class="row">
    <div class="col-md-3">
      <%= image_tag @item.get_item_image(120,80) %>
    </div>

    <div class="col-md-8 offset-md-1">

      <div>商品名</div>
      <%= @item.name %>

      <div>商品説明</div>
      <%= @item.introduction %>

      <div>税込価格<br>(税抜価格)</div>
      <%= @item.with_tax_price %> (<%= @item.price.to_s(:delimited) %>)円

      <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>

        <%= f.hidden_field :item_id,value: @item.id %>

        <%= f.select :amount, *[1..10] %>

        <%= f.submit 'カートに入れる', class: 'btn btn-success btn-sm' %>

      <% end %>

    </div>
  </div>
</div>