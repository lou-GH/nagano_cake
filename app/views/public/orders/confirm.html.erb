<h2>注文情報確認</h2>

<div class="container px-5 px-sm-0">
  <div class="row">
    <table class="table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% if current_customer.cart_items.present? %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_item_image(60,50) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %><% @total +=  cart_item.subtotal %></td>
        </tr>
      <% end %>
      <% end %>
      </tbody>
    </table>

    <table class="table-bordered">
      <tr>
        <th class="table-secondary">送料</th>
        <td>800</td>
      </tr>
      <tr>
        <th class="table-secondary">商品合計</th>
        <td><%= @total %></td>
      </tr>
      <tr>
        <th class="table-secondary">請求金額</th>
        <td><%= @total + 800 %></td>
      </tr>
    </table>
  </div>

<!--<p>ご請求金額</p>-->
<%#= @total.to_s(:delimited) %>

<p class="font-weight-bold">支払方法</p>
  <%= @order.payment_method %>


<p class="font-weight-bold">お届け先</p>
  <%= @order.shipping_address %>


<%= form_with model: @order, url: orders_path do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :total_price, value: @total %>
  <%= f.submit "注文を確定する" %>
<% end %>
</div>