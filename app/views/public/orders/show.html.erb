<div class="container">
  <div class="row">
    <h1>注文履歴詳細</h1>
    <div class="col-xs-8">

<%# @orders.each do |order| %>
<table class="table-bordered">
    <tr>
      <th class="table-secondary">注文日</th>
      <td><%= l @order.created_at, format: :short %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送先</th>
      <td>
        〒<%= @order.shipping_postal_code %><br>
        <%= @order.shipping_address %><br>
        <%= @order.shipping_name %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th class="table-secondary">ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </table>
</div>

<div class="col-xs-3">
請求情報
  <table>
    <tr>
      <th class="table-secondary">商品合計</th>
      <td><%= @order.invoice_amount - @shipping_fee %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送料</th>
      <td><%= @shipping_fee %></td>
    </tr>
    <tr>
      <th class="table-secondary">ご請求額</th>
      <td><%= @order.invoice_amount %></td>
    </tr>
  </table>
</div>

<div class="col-xs-8">
注文内容
  <table>
    <thead>
      <tr class="table-secondary">
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.item.with_tax_price).floor.to_s(:delimited)%></td>
        <td><%= order_detail.amount %></td>
        <td>￥<%= (@order.subtotal - @shipping_fee).floor.to_s(:delimited) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>