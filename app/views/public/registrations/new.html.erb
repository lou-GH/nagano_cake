<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    (姓)<%= f.text_field :last_name, autofocus: true, id:"inputLastName",　placeholder: "令和" %>
    (名)<%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"道子" %>
  </div>

  <div class="field">
    <p>名前</p>
    (姓)<%= f.text_field :last_name_kana, autofocus: true, id:"inputLastName",　placeholder: "令和" %>
    (名)<%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstName", placeholder:"道子" %>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <p>郵便番号(ハイフンなし)</p>
    <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder: "0000000" %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <p>電話番号(ハイフンなし)</p>
    <%= f.text_field :telephone_number, autofocus: true, id:"inputPostalCode", placeholder: "0000000" %>
  </div>

  <div class="field">
    <p>パスワード(6文字以上)</p>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <p>パスワード(確認用)</p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
  <%= link_to root_path do %>
    こちら
  <% end %>
  からログインしてください。


